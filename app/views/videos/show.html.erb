<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-6 flex justify-between items-center">
    <%= link_to root_path, class: "text-gray-600 hover:text-gray-900 flex items-center space-x-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      <span>Back to Videos</span>
    <% end %>

    <div class="flex space-x-2">
      <% if @youtube_authorized %>
        <%= button_to "Sync from YouTube", sync_video_path(@video), method: :post, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium" %>
      <% end %>
      <%= button_to "Remove Video", video_path(@video), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg text-sm font-medium" %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Video Player -->
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="relative pb-[56.25%] bg-gray-900">
          <iframe
            class="absolute inset-0 w-full h-full"
            src="https://www.youtube.com/embed/<%= @video.youtube_video_id %>"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
          </iframe>
        </div>

        <div class="p-6">
          <h1 class="text-2xl font-bold text-gray-900 mb-4"><%= @video.title %></h1>

          <!-- Stats -->
          <div class="flex items-center space-x-6 text-sm text-gray-600 mb-4">
            <span class="flex items-center space-x-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
              <span><%= number_with_delimiter(@video.view_count) %> views</span>
            </span>

            <span class="flex items-center space-x-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z"/>
              </svg>
              <span><%= number_with_delimiter(@video.like_count) %> likes</span>
            </span>

            <span class="flex items-center space-x-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"/>
              </svg>
              <span><%= number_with_delimiter(@video.comment_count) %> comments</span>
            </span>
          </div>

          <!-- Description -->
          <div class="border-t pt-4">
            <h3 class="font-semibold text-gray-900 mb-2">Description</h3>
            <p class="text-gray-700 whitespace-pre-wrap"><%= @video.description %></p>
          </div>
        </div>
      </div>

      <!-- Edit Video (YouTube OAuth Required) -->
      <% if @youtube_authorized %>
        <div class="bg-white rounded-lg shadow-lg p-6">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-bold text-gray-900">Edit Video Details</h2>
            <span class="flex items-center space-x-2 text-green-600 text-sm">
              <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
              </span>
              <span class="font-medium">YouTube Connected</span>
            </span>
          </div>

          <%= form_with model: @video, url: video_path(@video), method: :patch, class: "space-y-4" do |f| %>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Title</label>
              <%= f.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
              <%= f.text_area :description, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
            </div>

            <%= f.submit "Update on YouTube", class: "bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg font-medium cursor-pointer" %>
          <% end %>
        </div>
      <% else %>
        <div class="bg-yellow-50 border-l-4 border-yellow-400 rounded-lg p-6">
          <div class="flex items-start">
            <svg class="w-6 h-6 text-yellow-600 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="text-yellow-800 font-semibold mb-2">YouTube Connection Required</h3>
              <p class="text-yellow-700 mb-3">
                To unlock these features, connect your YouTube account:
              </p>
              <ul class="list-disc list-inside text-yellow-700 mb-4 space-y-1">
                <li>Edit video title and description</li>
                <li>View and manage comments</li>
                <li>Post and reply to comments</li>
                <li>Sync latest video statistics</li>
              </ul>
              <%= link_to oauth_authorize_path, class: "inline-flex items-center bg-yellow-600 hover:bg-yellow-700 text-white px-5 py-2 rounded-lg font-medium transition-colors" do %>
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 3.5a1.5 1.5 0 013 0V4a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-.5a1.5 1.5 0 000 3h.5a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-.5a1.5 1.5 0 00-3 0v.5a1 1 0 01-1 1H6a1 1 0 01-1-1v-3a1 1 0 00-1-1h-.5a1.5 1.5 0 010-3H4a1 1 0 001-1V6a1 1 0 011-1h3a1 1 0 001-1v-.5z"/>
                </svg>
                Connect YouTube Account
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Comments Section -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-bold text-gray-900">Comments</h2>
          <% if @youtube_authorized %>
            <%= link_to video_comments_path(@video), class: "flex items-center space-x-2 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" do %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"/>
              </svg>
              <span>View & Manage Comments</span>
            <% end %>
          <% else %>
            <div class="flex items-center space-x-2 bg-gray-100 text-gray-500 px-4 py-2 rounded-lg">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
              </svg>
              <span class="text-sm font-medium">Requires YouTube Connection</span>
            </div>
          <% end %>
        </div>
        <p class="text-gray-600">
          <% if @youtube_authorized %>
            View, post, reply to, and manage all comments for this video.
          <% else %>
            Connect your YouTube account to view and manage comments for this video.
          <% end %>
        </p>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Notes Section -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Notes</h2>

        <!-- New Note Form -->
        <%= form_with model: [@video, @video.notes.build], url: video_notes_path(@video), class: "mb-4" do |f| %>
          <%= f.text_area :content,
              placeholder: "Add a note about this video...",
              rows: 3,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent mb-2" %>
          <%= f.submit "Add Note", class: "w-full bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium cursor-pointer" %>
        <% end %>

        <!-- Notes List -->
        <% if @notes.any? %>
          <div class="space-y-3">
            <% @notes.each do |note| %>
              <div class="bg-gray-50 rounded-lg p-4 relative group">
                <p class="text-gray-800 text-sm mb-2"><%= note.content %></p>
                <div class="flex justify-between items-center">
                  <span class="text-xs text-gray-500"><%= time_ago_in_words(note.created_at) %> ago</span>
                  <%= button_to video_note_path(@video, note), method: :delete, data: { turbo_confirm: "Delete this note?" }, class: "text-red-600 hover:text-red-700 text-xs font-medium" do %>
                    Delete
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-sm text-center py-4">No notes yet. Add your first note above!</p>
        <% end %>
      </div>

      <!-- Video Info -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-3">Video Info</h3>
        <dl class="space-y-2 text-sm">
          <div>
            <dt class="text-gray-600">Published</dt>
            <dd class="text-gray-900 font-medium"><%= @video.published_at&.strftime("%B %d, %Y") %></dd>
          </div>
          <div>
            <dt class="text-gray-600">Video ID</dt>
            <dd class="text-gray-900 font-mono text-xs"><%= @video.youtube_video_id %></dd>
          </div>
          <div>
            <dt class="text-gray-600">Added to Dashboard</dt>
            <dd class="text-gray-900 font-medium"><%= @video.created_at.strftime("%B %d, %Y") %></dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>
